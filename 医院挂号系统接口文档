

// 医院介绍
GET 
    /hospital/introduction
    request:
        hospital_id: 0                          // default: 0
        return_type: "json"                     // "json"
    response:
        {
            "error_code": 0,
            "name": "海口妇幼保健院"
            "photo": "/image/1111.jpg",         // 图片链接
            "description":   ""                 // 介绍
        }

// 医院交通指引
GET 
    /hospital/traffic-guide
    request:
        hospital_id: 0
        return_type: "json"
    response:
        {
            "error_code": 0,
            "longtitude": 113.1111，            // 经度
            "latitude": 26.222,                 // 纬度
            "traffic_intro": "",
            "traffic_guide": "",
            "phone":  020-11111                 // 电话
        }

// 医院资讯 - 列表
GET 
    /hospital/information/preview
    request:
        hospital_id                             // default: 0
        page                                    // 1
        news_per_page                           // 10
        return_type: "json"
    response:
        // return type must be json
        {
            "error_code": 0,
            "total": 123,
            "news_list":
            [
                {
                    "id": 0,
                    "title": "",
                    "image": "/image/1.jpg",
                    "is_new": true,
                    "time":                     // timestamp
                },
                {
                    "id": 1,
                    "title": "",
                    "image": "",
                    "is_new": false,
                    "time":                     // timestamp
                }
            ]
        }

// 医院资讯 - 详细内容
GET 
