

// 医院介绍
GET 
    /hospital/introduction
    request:
        hospital_id: 1                                  // default: 1
    response:
        {
            "error_code": 0,
            "name": "海口妇幼保健院"
            "photo": "/image/1111.jpg",                 // 图片链接
            "description":   ""                         // 介绍
        }

// 医院交通指引
GET 
    /hospital/traffic_guide
    request:
        hospital_id: 1
    response:
        {
            "error_code": 0,
            "longtitude": 113.1111，                    // 经度
            "latitude": 26.222,                         // 纬度
            "traffic_intro": "",    
            "traffic_guide": "",
            "phone":  020-11111                         // 电话
        }

// 医院资讯 - 列表
GET 
    /hospital/information/preview
    request:
        hospital_id                                     // default: 1
        page                                            // 1
        news_per_page                                   // 10
    response:
        // return type must be json
        {
            "error_code": 0,                            // 0 - ok
                                                           1 - 无资讯
                                                           2 - 页码从1开始
                                                           3 - 页码超过最后一页
            "total": 123,
            "news_list":
            [
                {
                    "id": 0,
                    "title": "",
                    "image": "/image/1.jpg",
                    "is_new": true,
                    "created_at":                       // 
                },
                {
                    "id": 1,
                    "title": "",
                    "image": "",
                    "is_new": false,
                    "created_at":                       // 
                }
            ]
        }

// 医院资讯 - 详细内容
GET 
    /hospital/information/detail
    request:
        news_id: 11
        hospital_id: 1
    response:
        {
            "error_code": 0,                            // 0 - ok
                                                        // 1 - Not found
            "news":
            {
                "title": "",                    
                "image": "",
                "is_new": false,                        // 是否新发布
                "created_at": ,                         // 
                "content":                              // 内容
            }
        }

