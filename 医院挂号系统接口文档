// 获取可预约的时间段
GET
    /register/get-schedule: user_id
    request:
        doctor_id: 
        latest: 7
    response:
        {
            "error_code": 0,
            "schedules":
            [
                {
                    "id": 0,
                    "date": "2015-07-28",
                    "period": 0,                // 0 - 上午, 1 - 下午, 2 - 晚上
                    "is_full"
                },
                {
                    "id": 1,
                    "date": "2015-07-28",
                    "period": 1,
                    "is_full"
                }
            ]
        }

// 获取相应时间段的挂号信息
