// 发送手机验证码
POST 
    /user/send_verification_code
    request:
        telephone: 13580501456
    response:
        {
            "error_code": 0,                                // 0 - 验证码已经发送
                                                            // 1 - 手机号码不正确
                                                            // 2 - 该手机号已被注册
                                                            // 3 - 验证码发送失败
            "message": ""
        }

// 验证手机验证码
POST
    /user/check_verification_code
    request:
        verification_code: 123123
    response:
        {
            "error_code": 0,                                // 0 - 验证码正确
                                                            // 1 - 验证码错误
                                                            // 2 - 验证码格式错误
                                                            // 3 - 请重新获取验证码
            "message": ""
        }

// 用户登陆
// web端用
GET
    /user/login
    request:
    response:
        <return html>

POST
    /user/login
    request:
        phone: 13580501456
        password: "123123"
    response:
        {
            "error_code": 0,                                // 0 - 登陆成功
                                                            // 1 - 请输入手机号码
                                                            // 2 - 请输入密码
                                                            // 3 - 不存在该用户
                                                            // 4 - 密码错误
            "message": ""
        }

// 重置密码
// 调用前先调用验证码接口
POST
    /user/verify_and_reset_password
    request:
        new_password:
    response:
        {
            "error_code": 0,
            "message": 
        }

// 用户注册
// web端用
GET 
    /user/register
    request:
    response:
        <return html>

POST 
    /user/register
    request:
        account: "",
        password: "",
        real_name: "",
        gender: "",                                         // 0 - 男，1 - 女, 2 - 未知
        telephone: "",
    response:
        {
            "error_code": 0,                                //
            "message": "" 
        }

// 用户中心
// for web
GET
    /user/center: user_id
    request:
    return:
        <html page>

// 获取指定用户挂号记录
GET
    /user/record/get_records: user_id
    request:
    response:
        {
            "error_code": 0,
            "register_accounts": 
            [
                {
                    "id": 123,
                    "name": "fuck",
                    "records": [
                        {
                            "id": 0,
                            "department": ,
                            "status": "未就诊" or "已就诊" or "需复诊",                    
                            "advice": ,                     // 医嘱
                            "date": "2015-07-28",
                            "start": "09:00",
                            "end": "10:00",
                            "period": "上午" or "下午"
                            "return_date": "2015-08-01",
                            "doctor":
                            {
                                "name",
                                "title"
                            }
                        }
                    ]
                },
                {
                    ..
                }
            ]
        }

