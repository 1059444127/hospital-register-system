// 发送手机验证码
GET 
    /user/send-verification-code
    request:
        telephone: 13580501456
        return_type: "json"
    response:
        {
            "error_code": 0,                    // 0 - ok, 1 - 手机号码不正确
            "message": ""
        }

// 验证手机验证码
POST
    /user/check-veritication-code
    request:
        verification_code: 123123
    response:
        {
            "error_code": 0,
            "message": ""
        }

// 用户注册
POST 
    /user/register
    request:
        account: "",
        password: "",
        real_name: "",
        gender: "",                             // 0 - 男，1 - 女, 2 - 未知
        telephone: "",
        return_type: "json"
    response:
        {
            error_code: 0,                      //
            "message": "" 
        }

// 获取挂号记录
GET
    /user/record/get-records: user_id
    request:
        page: 11
        records_per_page: 20
        return_type: "json"
    response:
        {
            "error_code": 0,
            "total": 123
            "records": 
            [
                {
                    "id": 0,
                    "time": ,
                    "department": ,
                    "doctor":
                    {
                        "name",
                        "title"
                    },
                    "status": 0,                // 0 - 未就诊, 1 - 已就诊, 2 - 需复诊
                    "advice":                   // 医嘱
                    "return_time": 
                }
            ]
        }

// 取消挂号
POST
    /user/record/cancel: user_id
    request:
        record_id: 111
        return_type: "json"
    response:
        {
            "error_code": 0,
            "message": ""
        }

